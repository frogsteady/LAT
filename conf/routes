# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET           /rest/users           controllers.UserController.readUsers
POST          /rest/user            controllers.UserController.createUser
GET           /rest/user/:id        controllers.UserController.readUser(id: Long)
PUT           /rest/user/:id        controllers.UserController.updateUser(id: Long)
DELETE        /rest/user/:id        controllers.UserController.deleteUser(id: Long)

GET           /rest/links           controllers.LinkController.readLinks
POST          /rest/link            controllers.LinkController.create
GET           /rest/link/:id        controllers.LinkController.read(id: Long)
PUT           /rest/link/:id        controllers.LinkController.update(id: Long)
DELETE        /rest/link/:id        controllers.LinkController.delete(id: Long)